<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.sisnet.univali.br.projetologin.MainActivity">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/user_profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="60dp"
            android:src="@drawable/user_img"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/photo_profile"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/camera_img"
            android:layout_gravity="bottom"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/icon_gmail"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:src="@drawable/gmail2_img"
            android:layout_weight="0.5"
            android:padding="6dp"/>

        <TextView
            android:id="@+id/input_gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_gmail"
            android:textSize="18sp"
            android:textStyle="bold"
            android:="@id/icon_gmail"
            android:text="@string/input_gmail"/>

        <TextView
            android:id="@+id/text_gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_gmail"
            android:layout_gravity="bottom"
            android:layout_below="@id/input_gmail"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>




    


</LinearLayout>
